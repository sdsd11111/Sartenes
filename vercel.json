{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/admin/login.html",
      "dest": "/public/admin/login.html"
    },
    {
      "src": "/admin/(.*)",
      "headers": {
        "Cache-Control": "no-store, no-cache, must-revalidate, proxy-revalidate",
        "Pragma": "no-cache",
        "Expires": "0"
      },
      "dest": "/public/admin/index.html"
    },
    {
      "src": "/admin/(.*\\.(css|js|png|jpg|jpeg|gif|ico|svg))$",
      "dest": "/public/admin/$1"
    },
    {
      "src": "/menu/platos/([^/]+)\\.html$",
      "dest": "/public/menu/platos/$1.html"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg|json|html))$",
      "headers": { 
        "cache-control": "public, max-age=31536000, immutable" 
      },
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",
      "status": 404,
      "dest": "/public/404.html"
    }
  ],
  "rewrites": [
    {
      "source": "/admin",
      "destination": "/public/admin/login.html"
    },
    {
      "source": "/admin/",
      "destination": "/public/admin/login.html"
    }
  ]
}