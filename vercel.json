{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/admin/login.html",
      "dest": "/public/admin/login.html"
    },
    {
      "src": "/admin/(.*\\.(css|js|png|jpg|jpeg|gif|ico|svg))",
      "dest": "/public/admin/$1"
    },
    {
      "src": "/admin/$",
      "status": 302,
      "headers": { "Location": "/admin/login.html" }
    },
    {
      "src": "/admin$",
      "status": 301,
      "headers": { "Location": "/admin/" }
    },
    {
      "src": "/admin/(.*)",
      "dest": "/public/admin/index.html"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg|json|webmanifest|woff|woff2|ttf|eot|mp4|webp))",
      "headers": { 
        "Cache-Control": "public, max-age=31536000, immutable"
      },
      "dest": "/public/$1"
    },
    {
      "src": "/menu/platos/([^/]+)\\.html$",
      "dest": "/public/menu/platos/$1.html"
    },
    {
      "src": "/sobre-nosotros",
      "dest": "/public/index.html"
    },
    {
      "src": "/galeria",
      "dest": "/public/index.html"
    },
    {
      "src": "/contacto",
      "dest": "/public/index.html"
    },
    {
      "src": "/vegetarianos",
      "dest": "/public/index.html"
    },
    {
      "src": "/festival-de-mariscos",
      "dest": "/public/index.html"
    },
    {
      "src": "/parrilladas",
      "dest": "/public/index.html"
    },
    {
      "src": "/menu-infantil",
      "dest": "/public/index.html"
    },
    {
      "src": "/bebidas",
      "dest": "/public/index.html"
    },
    {
      "src": "/postres",
      "dest": "/public/index.html"
    },
    {
      "src": "/picaditos",
      "dest": "/public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ]
}