{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/public/admin/index.html"
    },
    {
      "src": "/menu/platos/([^/]+)\\.html$",
      "dest": "/public/menu/platos/$1.html"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|json|html))$",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}