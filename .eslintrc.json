{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": ["warn", { "allow": ["warn", "error", "info"] }],
    "no-unused-vars": "warn",
    "no-var": "error",
    "prefer-const": "error",
    "eqeqeq": "error",
    "no-undef": "error"
  },
  "ignorePatterns": ["public/**", "node_modules/**"]
}
