{
  "name": "los-sartenes",
  "version": "1.0.0",
  "description": "Sistema de gestión de menú para Los Sartenes",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon --inspect=0.0.0.0:9229 server.js",
    "debug": "node --inspect-brk=0.0.0.0:9229 server.js",
    "predev": "node scripts/prestart.js",
    "ensure-dirs": "node scripts/ensure-dirs.js",
    "check-env": "node scripts/check-env.js",
    "ensure-admin": "node scripts/ensure-admin.js",
    "copy-admin": "node scripts/copy-admin.js",
    "verify-images": "node scripts/verify-images.js",
    "vercel-build": "npm run prebuild",
    "prebuild": "npm run ensure-admin && npm run verify-images",
    "build": "npm run prebuild && node generate_dish_pages.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .js",
    "format": "prettier --write .",
    "deploy": "vercel --prod"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.75.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "helmet": "^7.1.0",
    "http-errors": "^2.0.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "nodemailer": "^6.9.7",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "nodemon": "^3.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.2.4",
    "tailwindcss": "^4.1.14"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "restaurant",
    "menu",
    "management",
    "nodejs",
    "express",
    "supabase"
  ],
  "author": "",
  "license": "ISC",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
